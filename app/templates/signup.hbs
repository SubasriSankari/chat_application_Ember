
<div id="wrapper">
    <div class="main-content">

        <div class="header-chat">
            <h2 class="loginHere">Sign Up to Chat</h2>
        </div><br>

        <div class="l-part">
            <p id="wrong-username-or-password"></p>

            <Input type="text" id="email" placeholder="Email.." 
                onkeyup={{action "checkEmailValidation" }} class="input-1" />
            <td id="emailValidation" class="error"></td><br>

            <div class="overlap-text">
                <Input type="password" id="pass" placeholder="Password.." class="input-2"
                    onkeyup={{action "checkPasswordValidation" }} />
                <td id="passwordValidation" class="error"></td><br>

                <Input type="password" id="confirm_pass" placeholder="Confirm Password.." class="input-3"
                    onkeyup={{action "checkConfirmPassword" }} />
                <td id="confirmPassword" class="error"></td><br>
            </div>

            <button {{action this.accessToSignUp}} class="btn">Signup</button>
            
        </div>
    </div>
    <div class="sub-content">
        <div class="s-part">
            Already have an account?<LinkTo @route="index-page"> Login </LinkTo>
        </div>
    </div>
</div>